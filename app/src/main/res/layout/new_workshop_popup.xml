<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/workshopNameEdit"
        android:layout_width="245dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="enter name"
        android:textSize="18dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/workshopAddressEdit"
        android:layout_width="242dp"
        android:layout_height="57dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="enter address"
        android:textSize="17dp"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/workshopNameEdit"
        app:layout_constraintTop_toBottomOf="@+id/workshopNameEdit" />

    <Button
        android:id="@+id/addWorkshopButton"
        android:layout_width="123dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:text="Add"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workshopAddressEdit" />

</androidx.constraintlayout.widget.ConstraintLayout>