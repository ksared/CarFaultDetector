<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyszukiwanie - Zaznacz objawy"
        />
    <CheckBox
        android:id="@+id/halasSilnikaWyszukiwanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="halasSilnika" />
    <CheckBox
        android:id="@+id/halasZawieszeniaWyszukiwanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="halasZawieszenia" />
    <CheckBox
        android:id="@+id/czarnyDymWyszukiwanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="czarnyDym" />
    <CheckBox
        android:id="@+id/szarpanieWyszukiwanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="szarpanie" />
    <CheckBox
        android:id="@+id/bicieKierownicyWyszukiwanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bicie Kierownicy" />
    <CheckBox
        android:id="@+id/sciaganiePodczasHamowaniaWyszukiwanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ściąganie podczas hamowania" />
    <CheckBox
        android:id="@+id/sciaganiePodczasJazdyWyszukiwanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ściąganie podczas jazdy" />
    <CheckBox
        android:id="@+id/wibracjeSilnikaWyszukiwanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wibracje silnika" />
    <CheckBox
        android:id="@+id/halasPodczasHamowaniaWyszukiwanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hałas podczas hamowania" />
    <CheckBox
        android:id="@+id/glosnaPracaUkladuWydWyszukiwanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Głośna praca układu wydechowego" />
    <Button
        android:id="@+id/findFaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Szukaj"/>

</LinearLayout>