<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/indicatorTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:text="Kliknij w ikonÄ™"/>

    <ImageButton
        android:id="@+id/tpms"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:src="@drawable/tpms"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/absIndicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:src="@drawable/abs"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/oil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:src="@drawable/alladinlamp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/accumulator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:src="@drawable/accumulator"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/checkEngine"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:src="@drawable/checkengine"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center"/>




</LinearLayout>