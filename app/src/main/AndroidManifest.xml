<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carfaultdetector">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarFaultDetector"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.FaultIssueCorrelationActivity"
            android:exported="false" />
        <activity
            android:name=".view.AddFaultIssues"
            android:exported="false" />
        <activity
            android:name=".view.NewFaultActivity"
            android:exported="false" />
        <activity
            android:name=".view.WorkshopsActivity"
            android:exported="false" />
        <activity
            android:name=".view.SignUpActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.CarFaultDetector.NoActionBar" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="false"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>